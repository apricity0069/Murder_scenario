}
.money-button-container {
  display: flex; /* 使用 Flexbox 来对齐金额和按钮 */
  align-items: center; /* 垂直居中对齐 */
}
.sc{
  display: flex;
  width: 40px;
  height: 40px;
  object-fit: contain;
  margin-left: 140px;
}
.booking-button {
  display: flex;
  background-color: #faba42; /* 橙色背景 */
  color: white; /* 白色文字 */
  padding: 10px 20px 12px 20px;
  margin-left: 80px;
  text-decoration: none; /* 无下划线 */
  font-size: 20px; /* 字体大小 */
  cursor: pointer; /* 鼠标悬停时显示指针 */
  border-radius: 5px; /* 圆角边框 */
}

.booking-button:hover {
  background-color: #ff8c00; /* 鼠标悬停时的背景色 */
}
