.story-summary {
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-top: 20px;
  padding: 10px;
  position: relative;
  width: 370px;
  color: #ccc;
}

.summary-content {
  line-height: 1.6;
  white-space: pre-wrap; /* 添加这个属性来支持自动换行 */
  color: #ccc;
}

.toggle-text {
  position: absolute;
  bottom: 10px;
  right: 10px;
  cursor: pointer;
  color: #ccc;
}
.jqjj{
