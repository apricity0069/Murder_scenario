.scroll-x-list {
  height: 180px; /* 列表的高度 */
  margin-bottom: 20px; /* 列表之间的间距 */
  width: 100%;  /* 或其他适当的宽度 */
  white-space: nowrap;
  margin-left: -6px;
  display: flex; /* 使子元素可以在一行中排列 */
}
.view-parent {
  display: inline-block; /* 水平排列 */
  text-align: center; /* 内容居中 */
}
.dm-image{
  width: 90px; /* 图像宽度 */
  height: 130px; /* 图像高度 */
  margin: 10px; /* 图像之间的间距 */
  border-radius: 5px; /* 图像边角圆润 */
}
.room-image{
  width: 90px; /* 图像宽度 */
  height: 130px; /* 图像高度 */
  margin: 10px; /* 图像之间的间距 */
  border-radius: 5px; /* 图像边角圆润 */
}

.room-name,.dm-name{
  display: block; /* 使名称占据一行 */
  margin-top: 0px; /* 名称与图像之间的间距 */
  font-size: 14px; /* 字体大小 */
  color: #ccc;
}
.bottom-fixed {
  position: fixed; /* 固定定位 */
  left: 0; /* 左边距离窗口边缘的距离 */
  right: 0; /* 右边距离窗口边缘的距离 */
  bottom: 0; /* 底部距离窗口边缘的距离 */
  display: flex; /* 使用Flex布局 */
  justify-content: center; /* 水平居中 */
  align-items: center; /* 垂直居中 */
  height: 50px; /* 固定区域的高度 */
  box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2); /* 底部阴影 */
  background-color: rgb(255, 255, 255); /* 背景颜色 */
}
