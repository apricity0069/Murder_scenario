/* pages/profile/profile.wxss */
page{
  height: 100%;
  width: 100%;
  overflow-y:auto;
}
.container {
  margin-top: -20%;
height: 100%;
  display: flex;
 width: 100%;
  background-color: #706e6e;
}
.container2{
  margin-top: 3%;
  flex: 1;
  height:60%;
  padding-bottom: 100%;
  background-color: rgb(255, 255, 255);
  width: 100%;
  border-top-right-radius:5% ;
  border-top-left-radius:5% ;
}

.top-section {
  width: 95%;
  height: 10%;
  display: flex;
  align-items: center;
  margin-top: 10%;
  padding-bottom: 0rpx;

}

.user-info {
  display: flex;
  margin-top: 5px;
  align-items: center;
  width: 100%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-left: 8%;
}

.info {
  margin-left: 20rpx;
}

.name {
  font-size: 32rpx;
  color: #ffffff;
}

.id {
  width: 100%;
  display: flex; /* 设置为弹性容器 */
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center; /* 水平居中对齐子元素 */
  justify-content: center; /* 垂直居中对齐子元素，这里不是必须的 */
  font-size: 24rpx;
  color: #cecccc;
}

.modify-btn {
  height: 60%;
  padding: 15rpx 20rpx;
  border-radius: 20rpx;
  background-color: #D9D9D9;
  color: #333333;
  font-size: 28rpx;
 
}

.horizontal-buttons {
 width: 100%;
  display: flex;
  justify-content: space-around;
margin-bottom: 5%;
  height:18%;

}

.button-item {
  display: flex; /* 设置为弹性容器 */
  flex-direction: column; /* 子元素垂直排列 */
  align-items: center; /* 水平居中对齐子元素 */
  justify-content: center; /* 垂直居中对齐子元素，这里不是必须的 */
}

.icon {
  padding: 10px;
  width: 65rpx; /* 图片宽度 */
  height: 65rpx; /* 图片高度 */

  border-radius: 5px;
}

.text1 {
  margin-top: 10rpx; /* 文字与图片之间的间距 */
}

.icon2 {
  width: 30px;
height: 30px;
padding: 10px;
margin-top: 5px;
margin-bottom: 5px;
}
.ads {
  height: 25%; /* 使用百分比来适应不同的屏幕高度 */
  width: 100%;
}

.ads .ad {
  
 width: 100%;
 height: 100%;
}

.adtext{
  margin-top: 0%;
float: inline-start;
margin-left: 2%;
margin-bottom: 5%;
color: rgb(163, 159, 159);
border: 1px solid gainsboro;
}
.vertical-buttons {
  margin-top: 8%;
  border-top: 2px rgb(175, 171, 171) solid;
  height: 40%;
  width: 98%;
  margin-left: 1%;
}
.button-item {
  display: flex;
  align-items: center;
margin-right: 5px;

}
.button-item2 {
width: 100%;
  display: flex;
  align-items: center;
  background-color: rgb(255, 255, 255);
  border-bottom: solid 1px #dfdede;

}
.out{
  width: 100%;
  margin-top: 8%;
  height: 10%;
}
.out button{
align-items: center;
  background-color: rgb(206, 198, 198);
  color: #686363;
}


