<!--pages/register/register.wxml-->
<view class="container"style="background-image: url('https://wx1.sinaimg.cn/orj360/e60238a1ly1hvjh0hz58vj21831qdx6r.jpg');background-size: cover;float:bottem;">
  <view class="box">
  <view class="form-item" id="userName">
    <text>用户名</text>
    <input type="text" placeholder="请输入用户名" bindinput="onUsernameInput" />
  </view>
  
  <view class="form-item"id="userPhone">
    <text>账号（手机号）</text>
    <input type="number" placeholder="请输入手机号" bindinput="onPhoneInput" />
  </view>

  <view class="form-item"id="userPwd">
    <text>密码</text>
    <input type="password" placeholder="请输入密码" bindinput="onPasswordInput" />
  </view>

  <view class="form-item"id="userPwd">
    <text>确认密码</text>
    <input type="password" placeholder="请再输入一次密码" bindinput="onConfirmPasswordInput" />
  </view>

  <button class="register-btn" bindtap="onRegister">注册</button>
  </view>
</view>

