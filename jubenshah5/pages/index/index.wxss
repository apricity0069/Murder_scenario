.announcement {
  position: relative;
  left: -1px;
  width:89.8%;
  height: 40px;
  overflow: hidden;
  border: 1px solid #ccc;
  background-color: rgb(252, 251, 245);
  display: flex;
  align-items: center;
  border-radius: 5px;
}
.announcement-image{
height: 30px;
width: 30px;
background-color:rgb(255, 251, 237) ;
z-index: 2;
}
.announcement-text {
  white-space: nowrap;
  animation: marquee 10s linear infinite;
}

@keyframes marquee {
  0% {
    transform: translateX(100%);
  }
  100% {
    transform: translateX(-100%);
  }
}
